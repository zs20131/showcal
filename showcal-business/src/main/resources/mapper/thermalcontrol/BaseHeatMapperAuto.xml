<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.showcal.thermalcontrol.dal.BaseHeatMapper">

    <resultMap  id="baseHeatPO" type="com.showcal.thermalcontrol.po.BaseHeatPO">
        <id column="ID" jdbcType="NUMERIC" property="id" />
        <result column="SEX"  jdbcType="VARCHAR" property="sex"></result>
        <result column="START_AGE"  jdbcType="NUMERIC" property="startAge"></result>
        <result column="END_AGE"  jdbcType="NUMERIC" property="endAge"></result>
        <result column="START_HEIGHT"  jdbcType="NUMERIC" property="startHeight"></result>
        <result column="END_HEIGHT"  jdbcType="NUMERIC" property="endHeight"></result>
        <result column="DISEASE_ID"  jdbcType="NUMERIC" property="diseaseId"></result>
        <result column="BASE_HEAT"  jdbcType="VARCHAR" property="baseHeat"></result>
        <result column="ROW_VERSION"  jdbcType="NUMERIC" property="rowVersion"></result>
        <result column="IS_DELETED"  jdbcType="TINYINT" property="isDeleted"></result>
        <result column="CREATED_BY"  jdbcType="NUMERIC" property="createdBy"></result>
        <result column="CREATION_TIME"  jdbcType="TIMESTAMP" property="creationTime"></result>
        <result column="LAST_UPDATED_BY"  jdbcType="NUMERIC" property="lastUpdatedBy"></result>
        <result column="LAST_UPDATE_TIME"  jdbcType="TIMESTAMP" property="lastUpdateTime"></result>
    </resultMap>

    <sql id="entityColumnList">
    `ID`,`SEX`,`START_AGE`,`END_AGE`,`START_HEIGHT`,`END_HEIGHT`,`DISEASE_ID`,`BASE_HEAT`,`ROW_VERSION`,`IS_DELETED`,`CREATED_BY`,`CREATION_TIME`,`LAST_UPDATED_BY`,`LAST_UPDATE_TIME`
    </sql>

    <insert id="insert">
        INSERT INTO
            `TC_BASE_HEAT`
            (
            <include refid="entityColumnList" />
            )
        VALUES
        (
        #{ baseHeat.id },
        
        #{ baseHeat.sex },
        #{ baseHeat.startAge },
        #{ baseHeat.endAge },
        #{ baseHeat.startHeight },
        #{ baseHeat.endHeight },
        #{ baseHeat.diseaseId },
        #{ baseHeat.baseHeat },
        0,0,#{ passport.userId },sysdate(),null,null
        )
    </insert>

    <insert id="insertBatch">
        INSERT INTO
            `TC_BASE_HEAT`
            (
            <include refid="entityColumnList" />
            )
        VALUES
        <foreach collection="list" item= "baseHeat" index ="index" separator=",">
            (
            #{ baseHeat.id },
            
            #{ baseHeat.sex },
            #{ baseHeat.startAge },
            #{ baseHeat.endAge },
            #{ baseHeat.startHeight },
            #{ baseHeat.endHeight },
            #{ baseHeat.diseaseId },
            #{ baseHeat.baseHeat },
            0,0,#{ passport.userId },sysdate(),null,null
            )
        </foreach >
    </insert>


    <update id="delete">
        UPDATE
            `TC_BASE_HEAT`
        SET
            `IS_DELETED` = 1
            ,`LAST_UPDATED_BY`=#{ passport.userId }
            ,`LAST_UPDATE_TIME`=SYSDATE()
        WHERE
            `IS_DELETED`=0
            AND `ID` = #{id}
    </update>

    <update id= "deleteBatch">
        UPDATE
            `TC_BASE_HEAT`
        SET
            `IS_DELETED` = 1
            ,`LAST_UPDATED_BY`=#{ passport.userId }
            ,`LAST_UPDATE_TIME`=SYSDATE()
        WHERE
            `IS_DELETED`=0
            AND `ID` in
        <foreach collection="list" item= "id" index ="index" open= "(" close =")" separator=",">
            #{id}
        </foreach >
    </update >


    <select id="getById" resultMap="baseHeatPO">
        SELECT
        <include refid="entityColumnList" />
        FROM
            `TC_BASE_HEAT`
        WHERE
            `IS_DELETED` = 0
            AND `ID` = #{id}
    </select>

    <select id="getListByIds" resultMap="baseHeatPO">
        SELECT
            <include refid="entityColumnList" />
        FROM
            `TC_BASE_HEAT`
        WHERE
        `IS_DELETED` = 0
        AND `ID` in
        <foreach collection="list" item= "id" index ="index" open= "(" close =")" separator=",">
            #{id}
        </foreach >
        
    </select>

    <select id="getAllList" resultMap="baseHeatPO">
        SELECT
        <include refid="entityColumnList" />
        FROM
            `TC_BASE_HEAT`
        WHERE
            `IS_DELETED`=0
    </select>

    <select id="existById"  resultType="java.lang.Long">
        SELECT
            COUNT(*)
        FROM
            `TC_BASE_HEAT`
        WHERE
            `IS_DELETED`=0
            AND `ID`=#{id}
    </select>
</mapper>