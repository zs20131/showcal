<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.showcal.platform.dal.SysUserTagsMapper">

    <resultMap  id="sysUserTagsPO" type="com.showcal.platform.po.SysUserTagsPO">
        <id column="ID" jdbcType="NUMERIC" property="id" />
        <result column="USER_ID"  jdbcType="NUMERIC" property="userId"></result>
        <result column="USER_TAG_ID"  jdbcType="NUMERIC" property="userTagId"></result>
        <result column="ROW_VERSION"  jdbcType="NUMERIC" property="rowVersion"></result>
        <result column="IS_DELETED"  jdbcType="TINYINT" property="isDeleted"></result>
        <result column="CREATED_BY"  jdbcType="NUMERIC" property="createdBy"></result>
        <result column="CREATION_TIME"  jdbcType="TIMESTAMP" property="creationTime"></result>
        <result column="LAST_UPDATED_BY"  jdbcType="NUMERIC" property="lastUpdatedBy"></result>
        <result column="LAST_UPDATE_TIME"  jdbcType="TIMESTAMP" property="lastUpdateTime"></result>
    </resultMap>

    <sql id="entityColumnList">
    `ID`,`USER_ID`,`USER_TAG_ID`,`ROW_VERSION`,`IS_DELETED`,`CREATED_BY`,`CREATION_TIME`,`LAST_UPDATED_BY`,`LAST_UPDATE_TIME`
    </sql>

    <insert id="insert">
        INSERT INTO
            `PL_SYS_USER_TAGS`
            (
            <include refid="entityColumnList" />
            )
        VALUES
        (
        #{ sysUserTags.id },
        
        #{ sysUserTags.userId },
        #{ sysUserTags.userTagId },
        0,0,#{ passport.userId },sysdate(),null,null
        )
    </insert>

    <insert id="insertBatch">
        INSERT INTO
            `PL_SYS_USER_TAGS`
            (
            <include refid="entityColumnList" />
            )
        VALUES
        <foreach collection="list" item= "sysUserTags" index ="index" separator=",">
            (
            #{ sysUserTags.id },
            
            #{ sysUserTags.userId },
            #{ sysUserTags.userTagId },
            0,0,#{ passport.userId },sysdate(),null,null
            )
        </foreach >
    </insert>


    <update id="delete">
        UPDATE
            `PL_SYS_USER_TAGS`
        SET
            `IS_DELETED` = 1
            ,`LAST_UPDATED_BY`=#{ passport.userId }
            ,`LAST_UPDATE_TIME`=SYSDATE()
        WHERE
            `IS_DELETED`=0
            AND `ID` = #{id}
    </update>

    <update id= "deleteBatch">
        UPDATE
            `PL_SYS_USER_TAGS`
        SET
            `IS_DELETED` = 1
            ,`LAST_UPDATED_BY`=#{ passport.userId }
            ,`LAST_UPDATE_TIME`=SYSDATE()
        WHERE
            `IS_DELETED`=0
            AND `ID` in
        <foreach collection="list" item= "id" index ="index" open= "(" close =")" separator=",">
            #{id}
        </foreach >
    </update >


    <select id="getById" resultMap="sysUserTagsPO">
        SELECT
        <include refid="entityColumnList" />
        FROM
            `PL_SYS_USER_TAGS`
        WHERE
            `IS_DELETED` = 0
            AND `ID` = #{id}
    </select>

    <select id="getListByIds" resultMap="sysUserTagsPO">
        SELECT
            <include refid="entityColumnList" />
        FROM
            `PL_SYS_USER_TAGS`
        WHERE
        `IS_DELETED` = 0
        AND `ID` in
        <foreach collection="list" item= "id" index ="index" open= "(" close =")" separator=",">
            #{id}
        </foreach >
        
    </select>

    <select id="getAllList" resultMap="sysUserTagsPO">
        SELECT
        <include refid="entityColumnList" />
        FROM
            `PL_SYS_USER_TAGS`
        WHERE
            `IS_DELETED`=0
    </select>

    <select id="existById"  resultType="java.lang.Long">
        SELECT
            COUNT(*)
        FROM
            `PL_SYS_USER_TAGS`
        WHERE
            `IS_DELETED`=0
            AND `ID`=#{id}
    </select>
</mapper>